{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6 col">
                {% for flashError in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            <h1 class="h3 mb-3 font-weight-normal text-center">Réinitialiser votre mot de passe</h1>
                            {{ form_start(requestForm) }}
                            <div class="input-group mb-3">
                                <div class="input-group-prepend"><span class="input-group-text">
                                            <i class="cil-user"></i>
                                            </span></div>
                                {{ form_widget(requestForm.email) }}
                            </div>
                            <small class="form-text text-muted">
                                Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                            </small>
                            <div class="form-error">
                                {{ form_errors(requestForm.email) }}
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-6 text-center">
                                <button class="btn btn-primary">Réinitialiser</button>
                            </div>
                        </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
